<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ED6D00" >

        <ImageView
            android:id="@+id/im_b43s_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/fanhui" />

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="代金券"
            android:textColor="#FFF"
            android:textSize="18sp" />
		<ImageView 
		    android:id="@+id/iv_share"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
		    android:src="@drawable/sandian"/>
    
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:background="#EEE">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_background"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:background="#F9861F" >
				<ImageView 
				    android:id="@+id/im_kaquanstate"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="175dp"
                    android:src="@drawable/huabian" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dp"
                        android:layout_weight="5" >

                	<com.zykj.loveattention.view.CircularImage 
                            android:id="@+id/im_touxiang"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/zhanweitu" />

                        <TextView
                            android:id="@+id/tv_diyongquan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@id/im_touxiang"
                            android:text="英图咖啡"
                            android:textColor="#FFF"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_juli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="30dp"
                            android:text="距离500米"
                            android:textColor="#FFF" />

                        <TextView
                            android:id="@+id/tv_kaquanname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="十元代金券一张"
                            android:textColor="#FFF"
                            android:textSize="24sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dp"
                        android:layout_weight="4"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_effectivetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:text="有效期：2015.8.12"
                            android:textColor="#FFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:text="还有三天过期"
                            android:textColor="#FFF" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="180dp" 
                android:background="#FFF">
				<ImageView
				    android:id="@+id/im_erweima"
                    android:layout_width="155dp"
                    android:layout_height="170dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/erweima"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#EEE" />

            <RelativeLayout
                android:id="@+id/rl_youhuidetail0"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="优惠详情"
                    android:textColor="#000000" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/my_header_arror" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_youhuidetail"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#EEEEEE" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_youhuidetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="优惠详情优惠详情优惠详情优惠详情"
                    android:textColor="#000000" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#EEE" />

            <RelativeLayout
                android:id="@+id/rl_shiyongxuzhi"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="使用须知"
                    android:textColor="#000000" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/my_header_arror" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_shiyongxuzhi1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#EEEEEE" 
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_shiyongxuzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="使用须知使用须知使用须知使用须知使用须知"
                    android:textColor="#000000" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#EEE" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#ffffff" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="适合门店  （人民广场店）"
                    android:textColor="#000000" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/my_header_arror" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#EEE" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:background="#ffffff" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="英图咖啡"
                        android:textColor="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="临沂市兰山区红旗路1号"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout 
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical">
                    <View 
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="#EEE"/>
                    <ImageView 
                        android:id="@+id/iv_call"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/dianhua"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>