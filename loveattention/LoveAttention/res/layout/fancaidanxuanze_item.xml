<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFF">
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="45dp">
        <TextView 
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:ems="8"
            android:text="彭德莱火锅..."/>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="#FFA800"
            android:text="￥0.01"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
            	android:layout_toRightOf="@id/tv_price"
            	android:layout_centerInParent="true"
            	android:layout_marginLeft="10dp"
            	android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/tv_geshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:text="1"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/im_jian"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toLeftOf="@id/tv_geshu"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/takeout_bg_btn_reduce" />

                <ImageView
                    android:id="@+id/im_jia"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_toRightOf="@id/tv_geshu"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/takeout_bg_btn_increase_focus" />
            </RelativeLayout>

    </RelativeLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#EEE"/>
</LinearLayout>
