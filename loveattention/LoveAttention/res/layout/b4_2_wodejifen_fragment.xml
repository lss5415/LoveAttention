<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE" >
    <LinearLayout 
        android:id="@+id/ll_jifenxia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="100dp"
        	android:background="#FFF">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/touxiang" />
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_gravity="center_vertical"
			    android:layout_marginLeft="8dp">
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000"
			        android:text="昵称"/>
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000"
			        android:layout_marginTop="15dp"
			        android:text="当前积分"/>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:gravity="right"
			    android:layout_marginRight="10dp">
			    <LinearLayout 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:orientation="vertical"
			        android:layout_gravity="center_vertical">
			        
			    <TextView 
			        android:id="@+id/tv_nickname"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="right"
			        android:textColor="#000"
			        android:text="XXXXXXX"/>
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#ED6D00"
			        android:layout_marginTop="15dp"
			        android:layout_gravity="right"
			        android:text="100.23"/>
			    </LinearLayout>
			</LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="#E8E8E8">
            <TextView 
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="历史总积分10"/>
            <TextView 
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="兑换金币积分10"/>
            <TextView 
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已体现积分10"/>
        </LinearLayout>
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="积分变化明细"
            android:background="#FFF"
            android:layout_marginTop="2dp"
            android:gravity="center|bottom"
            android:paddingBottom="5dp"
                android:textSize="16sp"
            android:textColor="#000"/>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="#FFF">
            <TextView 
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:text="时间"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#000"/>
            <TextView 
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:text="变量"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000"/>
            <TextView 
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:text="描述"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000"/>
            <TextView 
                android:layout_width="0.0dp"
                android:layout_height="fill_parent"
                android:text="余额"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#000"/>
        </LinearLayout>
        <com.zykj.loveattention.view.XListView
            android:id="@+id/lv_jifen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFF"
            android:dividerHeight="-1px"
            android:layout_marginTop="1dp">
        </com.zykj.loveattention.view.XListView>
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true">
	    <TextView 
	        android:id="@+id/tv_duihuanjinbi"
	        android:layout_width="0.0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:background="#ED6D00"
	        android:textColor="#FFF"
	        android:gravity="center"
	        android:text="兑换金币"
	        android:textSize="18sp"/>
	    <TextView 
	        android:id="@+id/tv_jifentixian"
	        android:layout_width="0.0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:textColor="#FFF"
	        android:background="#FF4500"
	        android:gravity="center"
	        android:text="积分提现"
	        android:textSize="18sp"/>
	</LinearLayout>
</RelativeLayout>
