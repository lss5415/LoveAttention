<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#F3F5F5" >

        <ImageView
            android:id="@+id/b172_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/fanhuihui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="翻菜单"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_zhongbu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/rl_title" >

        <LinearLayout
            android:id="@+id/ll_dibu"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#F3F5F5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="75dp"
                android:paddingBottom="10dp"
                android:text="购物车还是空的" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:gravity="right|center_vertical" >

                <TextView
                    android:id="@+id/tv_daodian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_b47"
                    android:gravity="center"
                    android:text="到店"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_songhuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_b47_white"
                    android:gravity="center"
                    android:text="外送"
                    android:textColor="@color/yellow" />
                <TextView
                    android:id="@+id/tv_daodian1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_b47_white"
                    android:gravity="center"
                    android:text="到店"
                    android:textColor="@color/yellow" 
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_songhuo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_b47"
                    android:gravity="center"
                    android:text="外送"
                    android:textColor="@color/white" 
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/ll_dibu" >

            <ListView
                android:id="@+id/lv_fancaidan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:dividerHeight="-1dp" >
            </ListView>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/xuanhaolehui" />

</RelativeLayout>