<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_t0itle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ED6D00"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商家详情"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/suggest_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/fanhui" />

        <ImageView
            android:id="@+id/suggest_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            android:src="@drawable/sharebai" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            android:layout_toLeftOf="@+id/suggest_share"
            android:src="@drawable/focus" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FFF" >

        <TextView
            android:id="@+id/tv_remen"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商家介绍"
            android:textColor="#000"
            android:textSize="16sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="50dip"
            android:background="#EEE"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_zuixin"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="图文介绍"
            android:textColor="#ED6D00"
            android:textSize="16sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="50dip"
            android:background="#EEE"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_jinqi"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户评价"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/f2_honggang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:background="#EEE" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/b3_hongdi_remen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#FF8E14"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/b3_hongdi_zuixin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#FF8E14"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/b3_hongdi_jinqi"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#FF8E14"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tuwen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <com.zykj.loveattention.view.MyListView
            android:id="@+id/lv_tuwen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:dividerHeight="-1dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_pingjia"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.zykj.loveattention.view.MyListView
            android:id="@+id/lv_pingjia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:dividerHeight="-1dp"/>
    </LinearLayout>

</LinearLayout>