<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#F3F5F5"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商家详情"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/suggest_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/fanhuihui" />

        <ImageView
            android:id="@+id/suggest_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/share" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/suggest_share"
            android:src="@drawable/focus" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#FFF" >

        <TextView
            android:id="@+id/tv_remen"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商家介绍"
            android:textColor="#000"
            android:textSize="16sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="50dip"
            android:background="#EEE"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_zuixin"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="图文介绍"
            android:textColor="#ED6D00"
            android:textSize="16sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="50dip"
            android:background="#EEE"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/tv_jinqi"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户评价"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/f2_honggang"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:background="#EEE" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/b3_hongdi_remen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#FF8E14"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/b3_hongdi_zuixin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#FF8E14"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/b3_hongdi_jinqi"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#FF8E14"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tuwen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/goods_cake" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="草莓奶油巧克力"
                android:textColor="#000" />
        </LinearLayout>
    </RelativeLayout>

    
    <LinearLayout 
        android:id="@+id/ll_pingjia"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF" >

                    <ImageView
                        android:id="@+id/imageViewx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/coffe" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/imageViewx"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/imageViewx"
                        android:textColor="#000"
                        android:text="美**女" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/imageViewx"
                        android:layout_below="@id/textView2"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="2015-3-18    草莓奶油蛋糕18寸1个"
                        android:textColor="#ADADAD" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/imageViewx"
                        android:layout_below="@id/imageViewx"
                        android:text="很不错，很喜欢，下次再买"/>

                    <ImageButton
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_alignParentRight="true"
                        android:background="#FFF"
                        android:src="@drawable/score" >
                    </ImageButton>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF" >

                    <ImageView
                        android:id="@+id/imageViewi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/coffe" />

                    <TextView
                        android:id="@+id/textViewu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/imageViewi"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/imageViewi"
                        android:textColor="#000"
                        android:text="美**女" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/imageViewi"
                        android:layout_below="@id/textView2"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="2015-3-18    草莓奶油蛋糕18寸1个"
                        android:textColor="#ADADAD" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/imageViewi"
                        android:layout_below="@id/imageViewi"
                        android:text="很不错，很喜欢，下次再买"/>

                    <ImageButton
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewu"
                        android:layout_alignParentRight="true"
                        android:background="#FFF"
                        android:src="@drawable/score" >
                    </ImageButton>
                </RelativeLayout>
    </LinearLayout>
    
</LinearLayout>