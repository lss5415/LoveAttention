                                        android:layout_height="wrap_content"
                                        android:text="￥20.00"
                                        android:textColor="#EA4614" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="￥20.00" />
                                </LinearLayout>

                                <TextView
