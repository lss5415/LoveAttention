                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:weightSum="9" >

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0.0dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="3" >

                                <TextView
