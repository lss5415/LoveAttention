            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FFF"
            android:textColor="#000"
            android:text="输入金额" />
    </LinearLayout>

    <ScrollView
