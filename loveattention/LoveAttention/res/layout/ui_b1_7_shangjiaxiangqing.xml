<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f3f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ED6D00"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商家详情"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/b17suggest_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/fanhui" />

        <ImageView
            android:id="@+id/suggest_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/sharebai" />

        <ImageView
            android:id="@+id/im_shoucang"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/suggest_share"
            android:src="@drawable/shoucangqian" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_fancaidan"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_fancaidan"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FFF"
            android:textColor="#000"
            android:text="翻菜单" />

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#EEEEEE" />

        <TextView
            android:id="@+id/suggst_input"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FFF"
            android:textColor="#000"
            android:text="输入金额" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/ll_fancaidan"
        android:layout_below="@id/rl_title"
        android:background="#EEEEEE" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relout"
                android:layout_width="fill_parent"
                android:layout_height="180dp" >

                <ImageView
                    android:id="@+id/im_imgpath"
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/goods_cake" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#55000000"
                    android:orientation="vertical"
                    android:weightSum="1" >

                    <TextView
                        android:id="@+id/tv_namea"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="甜品世家"
                        android:textColor="#FFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:text="商家标签 ：服务好、价格便宜、美味"
                        android:textColor="#FFF" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_opentime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="营业时间：早8:00-晚9:00"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="商家电话：0539:123456789"
                        android:textColor="#A6A6A6"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/tel" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="临沂市兰山区通达路店"
                        android:textColor="#A6A6A6"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/navigation" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff" >

                    <TextView
                        android:id="@+id/tv_perperso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="人均消费100元"
                        android:textColor="#000" >
                    </TextView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_youhuihuodong"
                        android:layout_width="0.0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#FFF"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingTop="10dp"
                        android:text="优惠活动"
                        android:textColor="#FF8E0A" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="fill_parent"
                        android:background="#EEEEEE" />

                    <TextView
                        android:id="@+id/tv_chanpinxinxi"
                        android:layout_width="0.0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#FFF"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:textColor="#000"
                        android:paddingTop="8dp"
                        android:text="产品信息" />
                </LinearLayout>
                
				<com.zykj.loveattention.view.AutoListView
                    android:id="@+id/atlv_youhuihuodong"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
          			android:dividerHeight="-1dip"  
                    android:numColumns="3"
                    android:verticalSpacing="5dp" />
    			<!-- <com.zykj.loveattention.view.MyListView
        			android:id="@+id/lv_youhuihuodong"
        			android:layout_width="match_parent"
        			android:layout_height="wrap_content"/> -->
                
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#FFF"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="查看更多" />

                <TextView
                    android:id="@+id/tv_tuwen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#FFF"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="图文详情"
                    android:textColor="#ED6D00" />

                <RelativeLayout
                    android:id="@+id/rl_youhuiquan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#FFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="#000"
                        android:text="我在本店的优惠券" />

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dp"
                        android:background="#FFF"
                        android:src="@drawable/gointo" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_17shangjiajieshao"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#FFF"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingTop="10dp"
                        android:text="商家介绍"
                        android:textColor="#FF8E0A" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="fill_parent"
                        android:background="#EEEEEE" />

                    <TextView
                        android:id="@+id/tv_17bendiangonggao"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#FFF"
                        android:gravity="center"
                        android:paddingBottom="6dp"
                        android:paddingTop="10dp"
                        android:textColor="#000"
                        android:text="本店公告" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="1dp"
                    android:background="#FFF" >

                    <TextView
                        android:id="@+id/tv_17jieshaoandgonggao"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#000"
                        android:text="  " />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pingjia"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="#FFF" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:textColor="#000"
                        android:text="商品评价"
                        android:textSize="16sp" />

                    <ImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dp"
                        android:background="#FFF"
                        android:src="@drawable/gointo" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="#FFFFFF" >

                    <ImageView
                        android:id="@+id/im_headportain"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/coffe" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/im_headportain"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/im_headportain"
                        android:textColor="#000"
                        android:text="美**女" />

                    <TextView
                        android:id="@+id/tv_intime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/im_headportain"
                        android:layout_below="@id/tv_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="2015-3-18    草莓奶油蛋糕18寸1个"
                        android:textColor="#ADADAD" />

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/im_headportain"
                        android:layout_below="@id/im_headportain"
                        android:text="很不错，很喜欢，下次再买"/>

					<RatingBar
					    android:id="@+id/comment_rating_bar"
					    style="@style/coupon_Rating_Bar"
					    android:layout_width="wrap_content"
					    android:layout_height="20dp"
					    android:layout_alignParentRight="true"
					    android:layout_alignParentTop="true"
					    android:background="#FFF"
					    android:isIndicator="true"
					    android:stepSize="1" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>