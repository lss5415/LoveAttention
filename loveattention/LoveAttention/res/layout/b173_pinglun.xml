<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp" >

        <ImageView
            android:id="@+id/im_headportain"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/coffe" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/im_headportain"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/im_headportain"
            android:text="美**女"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/im_headportain"
            android:layout_below="@id/im_headportain"
            android:text="很不错，很喜欢，下次再买" />

        <TextView
            android:id="@+id/tv_intime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/im_headportain"
            android:layout_below="@id/tv_content"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:paddingBottom="3dp"
            android:text="2015-3-18    草莓奶油蛋糕18寸1个"
            android:textColor="#ADADAD" />

        <RatingBar
            android:id="@+id/comment_rating_bar"
            style="@style/coupon_Rating_Bar"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#FFF"
            android:isIndicator="true"
            android:stepSize="1" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EEE" />

</LinearLayout>